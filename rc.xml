	<keybind key="Super_L">
		<action name="ShowMenu"><menu>root-menu</menu></action>
	</keybind>

	<keybind key="W-Down"><action name="Unmaximize"/></keybind>
	<keybind key="W-Up"><action name="Maximize"/></keybind>
	<keybind key="W-Return"><action name="ToggleMaximizeVert"/></keybind>
	<keybind key="W-Left">
		<action name="UnmaximizeFull"/>
		<action name="MaximizeVert"/>
		<action name="MoveResizeTo">
			<width>50%</width>
		</action>
		<action name="MoveToEdge"><direction>west</direction></action>
	</keybind>
	<keybind key="W-Right">
		<action name="UnmaximizeFull"/>
		<action name="MaximizeVert"/>
		<action name="MoveResizeTo">
			<width>50%</width>
		</action>
		<action name="MoveToEdge"><direction>east</direction></action>
	</keybind>

	<submenuShowDelay>0</submenuShowDelay>
	<submenuHideDelay>50</submenuHideDelay>

